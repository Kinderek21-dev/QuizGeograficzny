                    </HorizontalStackLayout>

                    <Grid ColumnDefinitions="*, *" RowDefinitions="Auto, Auto, Auto, Auto" RowSpacing="10">
                        <Label Grid.Row="0" Grid.Column="0" Text="Gier rozegranych" VerticalOptions="Center"/>
                        <Label Grid.Row="0" Grid.Column="1" x:Name="GamesPlayedLabel" HorizontalOptions="End" FontAttributes="Bold" FontSize="16" />

