<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizGeograficzny.Views.ScoreboardPage"
             Title="Tablica wyników">

    <VerticalStackLayout Padding="10" Spacing="10">
        <Label Text="Top Wyników" FontSize="20" HorizontalOptions="Center" />
        <CollectionView x:Name="ScoresListView" ItemsLayout="VerticalList">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" CornerRadius="8" HasShadow="True">
                        <Grid ColumnDefinitions="*,Auto">
                            <StackLayout Grid.Column="0" VerticalOptions="Center">
                                <Label Text="{Binding PlayerName}" FontAttributes="Bold" />
                                <Label Text="{Binding Difficulty}" FontSize="12" />
                            </StackLayout>
                            <Label Grid.Column="1" Text="{Binding Score}" FontAttributes="Bold" HorizontalOptions="End" VerticalOptions="Center" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
            <Button Text="Odśwież" Clicked="OnRefreshClicked" />
            <Button Text="Wyczyść" Clicked="OnClearClicked" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
