<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizGeograficzny.Views.DifficultyPage"
             Title="Wybierz poziom trudności">

    <VerticalStackLayout
        VerticalOptions="Center"
        HorizontalOptions="Center"
        Spacing="15">

        <Label 
            Text="Wybierz poziom trudności"
            FontSize="28"
            HorizontalOptions="Center"
            Margin="0,0,0,20" />

        <Button Text="Łatwy" Clicked="GoToQuiz" WidthRequest="250" HeightRequest="50" />
        <Button Text="Średni" Clicked="GoToQuiz" WidthRequest="250" HeightRequest="50" />
        <Button Text="Trudny" Clicked="GoToQuiz" WidthRequest="250" HeightRequest="50" />
        <Button Text="Bardzo trudny" Clicked="GoToQuiz" WidthRequest="250" HeightRequest="50" />

    </VerticalStackLayout>

</ContentPage>
