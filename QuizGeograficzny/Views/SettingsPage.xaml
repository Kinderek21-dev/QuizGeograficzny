<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizGeograficzny.Views.SettingsPage"
             Title="Ustawienia">
    <VerticalStackLayout Padding="16" Spacing="16">
        <Label Text="Ustawienia" FontSize="24" HorizontalOptions="Center" />

        <HorizontalStackLayout VerticalOptions="CenterAndExpand" Spacing="10">
            <Label Text="Automatyczny motyw (czujnik światła)" VerticalOptions="Center" />
            <Switch x:Name="AutoThemeSwitch" Toggled="OnAutoThemeToggled" />
        </HorizontalStackLayout>

        <Label Text="Ręczny wybór motywu:" />
        <Picker x:Name="ThemePicker" SelectedIndexChanged="OnThemePickerChanged">
            <Picker.Items>
                <x:String>System</x:String>
                <x:String>Light</x:String>
                <x:String>Dark</x:String>
            </Picker.Items>
        </Picker>

        <Button Text="Zapisz" Clicked="OnSaveClicked" />
    </VerticalStackLayout>
</ContentPage>
