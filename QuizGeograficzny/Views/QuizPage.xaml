<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="QuizGeograficzny.Views.QuizPage"
    Title="Quiz">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label x:Name="ProgressLabel"
                   FontSize="16"
                   HorizontalOptions="Center"
                   Text="Pytanie 1 / 10" />

            <Label x:Name="QuestionLabel"
                   FontSize="20"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   Text="Tutaj pojawi siÄ™ pytanie"
                   Margin="0,10,0,10"/>


            <Image x:Name="QuestionImage"
                   HeightRequest="150"
                   Aspect="AspectFit"
                   IsVisible="False"/>

            <Button x:Name="AnswerButton1" Clicked="OnAnswerClicked" />
            <Button x:Name="AnswerButton2" Clicked="OnAnswerClicked" />
            <Button x:Name="AnswerButton3" Clicked="OnAnswerClicked" />
            <Button x:Name="AnswerButton4" Clicked="OnAnswerClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>