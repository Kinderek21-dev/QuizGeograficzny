<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizGeograficzny.Views.QuizPage"
             Title="Quiz">

    <VerticalStackLayout Padding="20" Spacing="10">
        <Label x:Name="ProgressLabel"
               FontSize="18"
               HorizontalOptions="Center" />

        <Label x:Name="QuestionLabel"
               FontSize="22"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="Black"
               HorizontalTextAlignment="Center"
               Margin="10,0" />

        <Image x:Name="QuestionImage"
               IsVisible="False"
               HeightRequest="150"
               Aspect="AspectFit"
               Margin="0,10" />

        <ProgressBar x:Name="QuestionTimerProgressBar"
                     Progress="1"
                     HeightRequest="10"
                     Margin="0,10" />

        <Label x:Name="QuestionTimerLabel"
               FontSize="16"
               HorizontalOptions="Center"
               TextColor="Gray" />

        <Button x:Name="AnswerButton1"
                Clicked="OnAnswerClicked"
                BackgroundColor="#f0f0f0"
                TextColor="Black"
                FontSize="18"
                CornerRadius="15" />

        <Button x:Name="AnswerButton2"
                Clicked="OnAnswerClicked"
                BackgroundColor="#f0f0f0"
                TextColor="Black"
                FontSize="18"
                CornerRadius="15" />

        <Button x:Name="AnswerButton3"
                Clicked="OnAnswerClicked"
                BackgroundColor="#f0f0f0"
                TextColor="Black"
                FontSize="18"
                CornerRadius="15" />

        <Button x:Name="AnswerButton4"
                Clicked="OnAnswerClicked"
                BackgroundColor="#f0f0f0"
                TextColor="Black"
                FontSize="18"
                CornerRadius="15" />
    </VerticalStackLayout>
</ContentPage>
