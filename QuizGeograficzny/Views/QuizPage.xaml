<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizGeograficzny.Views.QuizPage"
             Title="Quiz">

        <VerticalStackLayout
            x:Name="QuizLayout"
            Padding="20"
            Spacing="15"
            VerticalOptions="Center">

        <Label 
            Text="Pytanie 1 z 10"
            FontSize="20"
            HorizontalOptions="Center" />

        <Label 
            x:Name="QuestionText"
            Text="Tutaj pojawi się treść pytania"
            FontSize="24"
            HorizontalOptions="Center"
            TextColor="Black"
            Margin="0,10,0,30" />

        <Button Text="A" Clicked="OnAnswerClicked" />
        <Button Text="B" Clicked="OnAnswerClicked" />
        <Button Text="C" Clicked="OnAnswerClicked" />
        <Button Text="D" Clicked="OnAnswerClicked" />

    </VerticalStackLayout>
</ContentPage>
