<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizGeograficzny.Views.GameModePage"
             Title="Wybierz tryb gry">

    <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Center">
        <Label Text="Wybierz tryb gry" FontSize="28" HorizontalOptions="Center" />

        <Frame CornerRadius="12" HasShadow="True" Padding="12">
            <VerticalStackLayout Spacing="8">
                <Label Text="Standard (wybierz poziom trudności)" FontAttributes="Bold" />
                <Button Text="Standard" Clicked="OnStandardClicked" />
            </VerticalStackLayout>
        </Frame>

        <Frame CornerRadius="12" HasShadow="True" Padding="12">
            <VerticalStackLayout Spacing="8">
                <Label Text="Survival (1 błąd = koniec)" FontAttributes="Bold" />
                <Button Text="Survival" Clicked="OnSurvivalClicked" />
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>
