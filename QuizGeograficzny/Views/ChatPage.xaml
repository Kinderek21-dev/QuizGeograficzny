<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:QuizGeograficzny.ViewModels"
             x:Class="QuizGeograficzny.Views.ChatPage"
             Title="Czat Graczy">

    <Grid RowDefinitions="*, Auto" Padding="10">
        <CollectionView Grid.Row="0" 
                        ItemsSource="{Binding Messages}"
                        ItemsUpdatingScrollMode="KeepLastItemInView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout Padding="5" Spacing="2">
                        <Label Text="{Binding UserName}" FontAttributes="Bold" FontSize="12" TextColor="Gray"/>
                        <Frame CornerRadius="10" Padding="10" BackgroundColor="#E0E0E0" HasShadow="False">
                            <Label Text="{Binding MessageBody}" TextColor="Black" />
                        </Frame>
                        <Label Text="{Binding Timestamp, StringFormat='{0:HH:mm}'}" FontSize="10" HorizontalOptions="End" TextColor="Silver"/>
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Grid Grid.Row="1" ColumnDefinitions="*, Auto" ColumnSpacing="10" Margin="0,10,0,0">
            <Entry Grid.Column="0" 
                   Placeholder="Napisz wiadomość..." 
                   Text="{Binding MessageText}"
                   ReturnCommand="{Binding SendCommand}"/>

            <Button Grid.Column="1" 
                    Text="Wyślij" 
                    Command="{Binding SendCommand}"/>
        </Grid>
    </Grid>
</ContentPage>